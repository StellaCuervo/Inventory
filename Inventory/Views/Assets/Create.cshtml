@model AssetDto
@{
    ViewData["Title"] = "Create new asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Create new asset</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Type.AssetTypeId, new SelectList(ViewBag.Type, "AssetTypeId", "Description"), new {@class = "form-control" })
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Location.Id, new SelectList(ViewBag.FullDescription, "Value", "Text"), new { @class = "form-control" })
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Device" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Device.Serial, new SelectList(ViewBag.FullDevice, "Value", "Text"), new { @class = "form-control" })
                    <span asp-validation-for="Device" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create asset" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


