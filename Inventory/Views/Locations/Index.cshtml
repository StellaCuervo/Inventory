@model IEnumerable<LocationDto>
@{
    ViewData["Title"] = "List locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>List locations</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Locations">Add new location</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Country)</td>
                        <td>@Html.DisplayNameFor(m => m.State)</td>
                        <td>@Html.DisplayNameFor(m => m.City)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Country</td>
                        <td>@item.State</td>
                        <td>@item.City</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No records</p>
        }
    </div>
</div>

